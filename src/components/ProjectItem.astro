---
const {url,tags,urlIcon} = Astro.props

---

<article class=" group  relative z-0"> 
    <div class=" absolute inset-0 bg-gray-500 opacity-0 transition duration-300 ease-in-out group-hover:opacity-30 rounded-3xl border-solid border-8 border-blue-600 hover:border-black flex justify-center items-center">   
    </div>

    
    <div class=" flex justify-center items-end absolute w-full h-full pb-6 opacity-0 group-hover:opacity-100">
      {
        tags.map(tag => <div class= {`rounded-full ${tag.color} p-2 ml-2`}>
            
            <p class="text-white font-bold">{tag.name}</p>
        </div>)
      }
        
        

        <div >
          <a href={urlIcon} target="_blank">
            <svg xmlns="http://www.w3.org/2000/svg"  class="h-10 mt-3 fill-current bg-white p-2 rounded-xl hover:text-blue-500 absolute top-1.5 left-6  -rotate-90" viewBox="0 0 512 512">
              <path d="M320 0c-17.7 0-32 14.3-32 32s14.3 32 32 32h82.7L201.4 265.4c-12.5 12.5-12.5 32.8 0 45.3s32.8 12.5 45.3 0L448 109.3V192c0 17.7 14.3 32 32 32s32-14.3 32-32V32c0-17.7-14.3-32-32-32H320zM80 32C35.8 32 0 67.8 0 112V432c0 44.2 35.8 80 80 80H400c44.2 0 80-35.8 80-80V320c0-17.7-14.3-32-32-32s-32 14.3-32 32V432c0 8.8-7.2 16-16 16H80c-8.8 0-16-7.2-16-16V112c0-8.8 7.2-16 16-16H192c17.7 0 32-14.3 32-32s-14.3-32-32-32H80z"/>
            </svg>
        </a>

        </div>
    </div>
    
    <img src={url} class="z-10 w-auto h-96 border-solid border-8 rounded-3xl border-blue-600 cursor-pointer transition duration-300 ease-in-out hover:border-black">
</article>